      'makedirs': True,
    },
    'managed': {},
  },

}, merge=True) %}

{%- if salt['grains.get']('os_family') == 'RedHat' %}
  {%- if salt['grains.get']('osmajorrelease')|int < 7 %}
    {%- if 'daemonize' not in uwsgi['emperor']['config'] %}
      {%- do uwsgi['emperor']['config'].update({'daemonize': '/var/log/uwsgi.log'}) %}
    {%- endif %}
  {%- endif %}
{%- endif %}
