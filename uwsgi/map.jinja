        'workers': '2',
        'no-orphans': 'true',
        'log-date': 'true',
        'uid': 'uwsgi',
        'gid': 'uwsgi',
        'emperor': '/etc/uwsgi.d',
      },
      'Arch': {
          'uid': 'http',
          'gid': 'http',
          'emperor': '/etc/uwsgi/vassals',
      },
    }, default='Debian'),
  },

  'vassals': {
    'disabled_postfix': '.disabled',
    'symlink_opts': {},
    'rename_opts': {},
    'managed_opts': {},
